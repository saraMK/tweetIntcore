<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/friends_item_cardview"
    android:layout_margin="@dimen/padding_2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_8">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:layout_gravity="center">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/twitter_icon"
                android:layout_gravity="center"
                app:civ_border_color="@color/tw__blue_default"
                app:civ_border_width="1dp"
                android:id="@+id/friends_item_profileImg_imageview"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_margin="@dimen/padding_2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="right"
                android:textSize="@dimen/text_meduim"
                android:id="@+id/friends_item_name_textview"
                android:layout_gravity="center"
                android:textColor="@color/tw__composer_black"
                android:textStyle="bold"
                />
            <TextView
                android:layout_marginTop="@dimen/padding_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small"
                android:text=""
                android:textColor="@color/tw__composer_black"
                android:id="@+id/friends_item_bio_textview"
                android:gravity="right"
                />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
